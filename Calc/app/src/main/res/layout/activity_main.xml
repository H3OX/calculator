<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="0"
            android:ems="10"
            android:background="@color/MintCream"
            android:id="@+id/textField" android:paddingTop="15pt"
            android:textSize="30sp" android:textAlignment="textEnd" android:lineSpacingExtra="8sp"
            android:textAllCaps="false" android:textStyle="bold" android:typeface="monospace"
            android:layout_weight="0"/>
    <TableLayout
            android:stretchColumns="*"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="1">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="0px" android:layout_weight="1">
            <Button
                    android:text="AC"
                    android:layout_width="30pt"
                    android:layout_height="match_parent" android:id="@+id/AC"
                    android:background="@color/DarkGray" android:textSize="24sp" android:layout_weight="1"/>
            <Button
                    android:text="Â±"
                    android:layout_width="30pt"
                    android:layout_height="match_parent" android:id="@+id/plusMinus"
                    android:background="@color/DarkGray" android:textSize="24sp" android:onClick="onNumberButtonClick"
                    android:layout_weight="1"/>
            <Button
                    android:text="%"
                    android:layout_width="30pt"
                    android:layout_height="match_parent" android:id="@+id/percent"
                    android:background="@color/DarkGray" android:textSize="24sp" android:layout_weight="1"/>
            <Button
                    android:text="/"
                    android:layout_width="119dp"
                    android:layout_height="match_parent" android:id="@+id/div"
                    android:background="@android:color/holo_orange_dark" android:textSize="24sp"
                    android:onClick="onNumberButtonClick" android:layout_marginRight="0dp" android:layout_weight="1"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="0px" android:layout_weight="1">
            <Button
                    android:text="7"
                    android:layout_height="match_parent" android:id="@+id/b7" android:layout_width="wrap_content"
                    android:background="@android:color/holo_green_dark" android:textSize="24sp"
                    android:onClick="onNumberButtonClick" android:layout_weight="1"/>/>
            <Button
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/b8"
                    android:background="@android:color/holo_green_dark" android:textSize="24sp"
                    android:onClick="onNumberButtonClick" android:layout_weight="1"/>/>
            <Button
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/b9"
                    android:background="@android:color/holo_green_dark" android:textSize="24sp"
                    android:onClick="onNumberButtonClick" android:layout_weight="1"/>/>
            <Button
                    android:text="X"
                    android:layout_height="match_parent" android:id="@+id/mult" android:layout_width="35pt"
                    android:background="@android:color/holo_orange_dark" android:textSize="24sp"
                    android:onClick="onNumberButtonClick" android:layout_marginRight="0dp" android:layout_weight="1"/>/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="0px" android:layout_weight="1">
            <Button
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/b4"
                    android:background="@android:color/holo_green_dark" android:textSize="24sp"
                    android:onClick="onNumberButtonClick" android:layout_weight="1"/>/>
            <Button
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/b5"
                    android:background="@android:color/holo_green_dark" android:textSize="24sp"
                    android:onClick="onNumberButtonClick" android:layout_weight="1"/>/>
            <Button
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/b6"
                    android:background="@android:color/holo_green_dark" android:textSize="24sp"
                    android:onClick="onNumberButtonClick" android:layout_weight="1"/>/>
            <Button
                    android:text="-"
                    android:layout_width="35pt"
                    android:layout_height="match_parent" android:id="@+id/subtr"
                    android:background="@android:color/holo_orange_dark" android:textSize="24sp"
                    android:onClick="onNumberButtonClick" android:layout_marginRight="0dp" android:layout_weight="1"/>/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="0px" android:layout_weight="1">
            <Button
                    android:text="1"
                    android:layout_height="match_parent" android:id="@+id/b1"
                    android:background="@android:color/holo_green_dark" android:textSize="24sp"
                    android:onClick="onNumberButtonClick" android:layout_weight="1"
            />/>
            <Button
                    android:text="2"
                    android:id="@+id/b2"
                    android:background="@android:color/holo_green_dark" android:textSize="24sp"
                    android:onClick="onNumberButtonClick" android:layout_weight="0"
                    android:layout_height="match_parent" android:layout_width="51dp"/>/>
            <Button
                    android:text="3"
                    android:layout_height="match_parent" android:id="@+id/b3"
                    android:background="@android:color/holo_green_dark" android:textSize="24sp"
                    android:onClick="onNumberButtonClick" android:layout_weight="1"/>/>
            <Button
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/add"
                    android:background="@android:color/holo_orange_dark" android:textSize="24sp"
                    android:onClick="onNumberButtonClick" android:layout_weight="1"/>/>
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40pt" android:layout_weight="0">
        <Button
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/b0" android:layout_weight="1"
                android:background="@android:color/holo_green_dark" android:textSize="24sp"/>
        <Button
                android:text="."
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/dot" android:layout_weight="1"
                android:background="@android:color/holo_orange_dark" android:textSize="24sp"
                android:onClick="onNumberButtonClick"/>
        <Button
                android:text="="
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/equals" android:layout_weight="1"
                android:background="@android:color/holo_orange_dark" android:textSize="24sp"/>
    </LinearLayout>
</LinearLayout>